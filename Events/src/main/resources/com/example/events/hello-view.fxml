<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="com.example.events.HelloController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#onKeyReleased" />
    <Button fx:id="helloButton" text="Say Hello" onAction="#onButtonClicked"
            GridPane.columnIndex="0" GridPane.rowIndex="1"
    />
    <Button fx:id="byeButton" text="Say Bye" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#onButtonClicked" />
</GridPane>


